@model IEnumerable<DHRM.BusinessEntity.Project>

@{
    ViewBag.Title = "Projects List";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}

<h1 class="page-header" active-menu="#lead_reports" active-submenu="#menu-leadreport">All Projects</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Project Name")
        </th>
        <th>
            @Html.Label("Project Description")
        </th>
        <th>
            @Html.Label("Project Banner")
        </th>
        <th>
            @Html.Label("Project Start Date")
        </th>
        <th>
            @Html.Label("Project End Date")
        </th>
        <th>
            @Html.Label("Project Remarks")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.project_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.project_description)
        </td>
        <td>
            <img src = '@item.ImagePath' style = "max-width:100px;max-height:100px" />
            @*@Html.DisplayFor(modelItem => item.ImagePath)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.project_start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.project_end_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.project_remarks)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.project_name }) |
            @Html.ActionLink("Details", "Details", new { id=item.project_name }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.project_name })
        </td>
    </tr>
}

</table>
